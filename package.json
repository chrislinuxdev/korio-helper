{
  "name": "korio-helper",
  "version": "1.0.0",
  "main": "dist/main.js",
  "type": "module",
  "scripts": {
    "clean": "rimraf dist",
    "copy:static": "copyfiles -u 1 \"src/pages/**/*\" dist/src/pages && copyfiles -u 1 \"src/styles/**/*\" dist/src/styles && copyfiles -u 1 \"public/**/*\" dist/public",
    "build:main": "tsc -p tsconfig.json",
    "build:preload": "tsc -p tsconfig.preload.json",
    "build": "npm run clean && npm run build:main && npm run build:preload && npm run copy:static",
    "start": "electron .",
    "dev": "concurrently -k -n MAIN,PRELOAD,ELECTRON \"tsc -w -p tsconfig.json\" \"tsc -w -p tsconfig.preload.json\" \"wait-on dist/main.js && electron .\""
  },
  "dependencies": {
    "acorn": "^8.15.0",
    "acorn-walk": "^8.3.4",
    "arg": "^4.1.3",
    "create-require": "^1.1.1",
    "diff": "^4.0.2",
    "make-error": "^1.3.6",
    "undici-types": "^7.12.0",
    "v8-compile-cache-lib": "^3.0.1",
    "yn": "^3.1.1",
    "electron": "^30.0.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.35.0",
    "@types/node": "^24.5.1",
    "eslint": "^9.35.0",
    "globals": "^16.4.0",
    "jiti": "^2.5.1",
    "prettier": "^3.6.2",
    "ts-node": "^10.9.2",
    "typescript-eslint": "^8.44.0",
    "concurrently": "^9.0.0",
    "copyfiles": "^2.4.1",
    "rimraf": "^6.0.0",
    "typescript": "^5.5.0",
    "wait-on": "^8.0.0"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "description": ""
}